<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/one"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bshape"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:shadowColor="#33ff33"
        android:shadowRadius="0.1"
        android:singleLine="true"
        android:text="@string/hello_world"
        android:textColor="@drawable/bcolor"
        android:textColorHighlight="#ccffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/one"
        android:text="@string/mine"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/three"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/two"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/three" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#AEEEEE"
        android:orientation="horizontal" >

        <FrameLayout 
            android:id="@+id/frame1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
            android:id="@+id/img1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher" />
        
        <TextView 
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="···"
            android:textColor="@android:color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="10sp"
            android:background="@drawable/bshape"
            />
        </FrameLayout>

        <LinearLayout 
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7A8B8B">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#8B5A2B"
                android:text="Eric"
                android:textSize="18sp" />

            
            <TextView
                android:id="@+id/messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#548B54"
                android:text="10:10"
                android:textSize="18sp" />
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4B0082" >
            
            <TextView
                android:id="@+id/userMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#7D26CD"
                android:text="Ericcccccccccccccccccccccc"
                android:textSize="18sp" />

        </RelativeLayout>
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>